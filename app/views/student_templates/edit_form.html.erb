<!-- Validation failure messages -->
<% if @student.errors.any? %>
  <% @student.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit student #<%= @student.id %>
</h1>

<hr>

<form action="/update_student/<%= @student.id %>" method="post">
  <!-- Label and input for first_name -->
  <div class="form-group">
    <label for="first_name">
      First name
    </label>

    <input type="text" id="first_name" name="first_name" class="form-control" value="<%= @student.first_name %>">
  </div>

  <!-- Label and input for last_name -->
  <div class="form-group">
    <label for="last_name">
      Last name
    </label>

    <input type="text" id="last_name" name="last_name" class="form-control" value="<%= @student.last_name %>">
  </div>

  <!-- Label and input for email -->
  <div class="form-group">
    <label for="email">
      Email
    </label>

    <input type="text" id="email" name="email" class="form-control" value="<%= @student.email %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update student
  </button>
</form>

<hr>

<a href="/students">
  Go back
</a>
